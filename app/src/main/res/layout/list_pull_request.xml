<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/pr_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/pr_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/pr_title"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/pr_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/pr_description"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"/>

    <View
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/pr_author"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#848D95" />

</androidx.constraintlayout.widget.ConstraintLayout>